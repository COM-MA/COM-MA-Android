<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/shape_gradient_rect_ff4b50af_lavender500"
    android:paddingHorizontal="20dp"
    android:paddingTop="30dp"
    android:paddingBottom="20dp"
    tools:context=".ui.home.HomeEmojiFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/shape_fill_rect8_lavender200"
        style="@style/bold_16_900"
        android:textColor="@color/white"
        android:text="@string/home_event_emoji_tv_title" />

    <FrameLayout
        android:id="@+id/frame_sticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/img_sticker_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_sticker_child"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_marginHorizontal="11dp"
                    android:background="@drawable/shape_stroke_dot_oval_gray100_gray500"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="?"
                    android:textColor="@color/gray_500"
                    android:textSize="25sp" />
                <TextView
                    android:id="@+id/btn_sticker_parents"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_marginHorizontal="11dp"
                    android:background="@drawable/shape_stroke_dot_oval_gray100_gray500"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="?"
                    android:textColor="@color/gray_500"
                    android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="17dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="6dp"
                style="@style/medium_12_900"
                android:textColor="@color/gray_500"
                android:text="@string/home_event_emoji_tv_enroll" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.8dp"
                android:src="@drawable/ic_arrow_right_gray500"
                />
        </LinearLayout>


    </FrameLayout>

</LinearLayout>