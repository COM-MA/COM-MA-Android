<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.card.CardSearchDetailActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollview_card_search_detail"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/horizontal_padding">

            <ImageView
                android:id="@+id/btn_back"
                android:paddingVertical="10dp"
                android:paddingEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/ic_arrow_left" />

            <ImageView
                android:layout_width="@dimen/app_bar_logo_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_logo_lavender" />

        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollview_card_search_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:scrollIndicators="none"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/horizontal_padding"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn_create_word_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_create_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_card_lavender" />

                <TextView
                    android:id="@+id/tv_create_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="@string/card_search_detail_tv_create_card"
                    android:textAlignment="center"
                    android:textColor="@color/lavender_500"
                    android:textSize="14dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_card"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:layout_marginVertical="16dp"
                android:padding="5dp"
                android:background="@drawable/shape_stroke_rect20_white_gray300"
                android:scaleType="fitCenter"
                android:src="@drawable/img_sample" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="1dp"
                android:paddingHorizontal="9dp"
                android:background="@drawable/shape_fill_rect4_orange100"
                style="@style/bold_12_900"
                android:textColor="@color/orange_500"
                android:text="@string/card_search_detail_tv_word_info" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    style="@style/bold_24_900" />

                <TextView
                    android:id="@+id/tv_word_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/bold_12_900"
                    android:textColor="@color/gray_500" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_word_descr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:maxLines="3"
                style="@style/regular_18_900"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="1dp"
                android:paddingHorizontal="9dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/shape_fill_rect4_green100"
                style="@style/bold_12_900"
                android:textColor="@color/green_500"
                android:text="@string/card_search_detail_tv_sign_info" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_sign"
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:layout_weight="0.7"
                    android:layout_marginVertical="12dp"
                    android:padding="5dp"
                    android:background="@drawable/shape_stroke_rect14_gray300"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_sample" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="7dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textAlignment="center"
                        android:textColor="@color/gray_900"
                        android:textSize="18dp"
                        android:text="@string/card_search_detail_tv_listen_sound"/>

                    <ImageButton
                        android:id="@+id/btn_speaker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_stroke_rect14_gray300"
                        android:clickable="true"
                        android:padding="24dp"
                        android:src="@drawable/ic_word_card_speaker_gray" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_sign_descr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                style="@style/regular_16_900"
                android:lineHeight="24dp"/>

        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_create_word"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:visibility="invisible"
        android:layout_marginHorizontal="63dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.45"
        android:outlineSpotShadowColor="@color/gray_500"
        app:cardCornerRadius="28dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@android:color/transparent"
                android:layout_gravity="right"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_word_card_star"/>
            <ImageButton
                android:layout_width="38dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_word_card_speaker_lavender"/>
            <ImageView
                android:id="@+id/img_create_card_word"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="60dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/img_sample"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tv_create_card_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/gray_900"
                android:textSize="32sp"
                android:text="사자"/>
            <Button
                android:layout_width="114dp"
                android:layout_height="42dp"
                android:layout_marginTop="25dp"
                app:backgroundTint="@null"
                android:background="@drawable/shape_fill_rect14_lavender200"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:paddingVertical="0dp"
                android:text="@string/word_card_btn_revert"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>